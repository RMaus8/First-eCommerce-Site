  </head>
  <body>
  
  <nav id="nav" class="navbar navbar-default navbar-static-top">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <!-- Brand and toggle get grouped for better mobile display -->
        
        <div class="navStuff">
          <div>
            <a href="/">
              <img src="/uploads/Logo.png" id="navLogo">
            </a>
          </div>
          
          <div>
            <a id="logoText" class="navbar-brand noMargin" href="/">Heart <span id="logoSpan">Design Co.</span></a>
          </div>            
          <div id="flexMenu">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false">
                <span class="navbar-toggler-icon"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            </div>
          </div>
          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse marginTop" id="navbarNavDropdown">
            <ul class="nav navbar-nav">
              <li class="nav-item"><a href="/products/furniture">Furniture</a></li>
              <li class="nav-item"><a href="/products/homegoods">Home Goods</a></li>
              <li class="nav-item"><a href="/products/gifts">Gift Ideas</a></li>
              <li class="nav-item"><a href="/events">Events</a></li>
              <li class="nav-item"><a href="/contact">Contact</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li class="nav-item">
                <a href="/shopping-cart">Cart 
                  <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                  <% if(session.cart){ %>
                  <span class="badge"><%= session.cart.totalQty %></span>
                  <% } %>
                </a>
              </li>
              <% if(!currentUser){ %>
              <li class="nav-item"><a href="/register">Sign up <i class="fa fa-user-plus"></i></a></li>
              <li class="nav-item"><a href="/login">Login <i class="fa fa-user"></i></a></li>
              <% } else { %>
              <li class="nav-item"><a href="/profile">Signed in as <%= currentUser.firstName %></a></li>
              <li class="nav-item"><a href="/logout">Logout</a></li>
              <% } %>
            </ul>
          </div><!-- /.navbar-collapse -->
          
        </div>  
      </div>
    </div>
  </nav>
  
  
  
  <script src="https://js.stripe.com/v3/"></script>
  
 <div class="row">
    <div class="col-xs-10 col-xs-offset-1"> 

  <div class="container">
    <% if(error && error.length > 0){ %>
      <div class="alert alert-danger" role="alert">
        <%= error %>
      </div>
    <% } %>
    <% if(success && success.length > 0){ %>
      <div class="alert alert-success" role="alert">
        <%= success %>
      </div>
    <% } %>
  </div>
  
  
  