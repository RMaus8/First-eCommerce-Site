<%include ../partials/header %>

<div class="container">
    <div class="row">
        <h1>Edit <%= product.name %></h1>
        <div class="padded">
            <form id="form" action="/products/<%= product.productType.toLowerCase() %>/<%= product._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Product Name</label>
                    <input class="form-control" type="text" name="product[name]" value="<%= product.name %>">
                </div>
                <!--<div class="form-group">-->
                <!--    <input class="form-control" type="text" name="image1" value="<%= product.image %>">-->
                <!--</div>-->
                <div class="form-group">
                    <label>Price</label>
                    <input class="form-control" type="number" name="product[price]" value="<%= product.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <input id="editDescription" class="form-control" type="text" name="product[description]" value="<%= product.description %>">
                </div>
                <div class="form-group">
                    <label>Specifications</label>
                    <input class="form-control" type="text" name="product[specs]" value="<%= product.specs %>">
                </div>
                <% if(product.productType === "furniture") { %>
                <div class="form-group">
                    <label>Varnish</label>
                    <input class="form-control" type="text" name="product[varnish]" value="<%= product.varnish %>">
                </div>
                <% } %>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="addMargin">Update Product</button>
            </form>
        </div>
    </div>
</div>




<%include ../partials/footer %>