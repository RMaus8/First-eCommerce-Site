<% include ./partials/header %>

<!--<div class="container">-->
    <div class="row">
        <div class="col-md-12">
            <div class="thumbnail registerForm">
                <h1>Contact Us</h1>
                  <form action="/contact" method="POST">
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label for="firstName">*First Name</label>
                        <input type="text" class="form-control" id="firstName" name="firstName" placeholder="first name" required>
                      </div>
                      <div class="form-group col-md-6">
                        <label for="inputPassword4">*Last Name</label>
                        <input type="text" class="form-control" id="inputPassword4" name="lastName" placeholder="last name" required>
                      </div>
                    </div>
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label for="inputEmail">*Email</label>
                        <input type="email" class="form-control" id="inputEmail" name="email" placeholder="email@somedomain.com" required>
                      </div>
                      <div class="form-group col-md-6">
                        <label for="inputNumber">Phone Number (xxx-xxx-xxxx)</label>
                        <input type="tel" class="form-control" id="inputNumber" name="phone" pattern='\d{3}[\-]\d{3}[\-]\d{4}' placeholder="xxx-xxx-xxxx">
                      </div>
                    </div>
                    <div class="form-group addMargin">
                      <label>*Select a Contact Reason:</label>
                      <select id="contact" class="form-control" name="contactReason" required>
                        <option name="empty" disabled selected></option>
                        <option name="build">Custom Build Request</option>
                        <option name="issue">Issue with purchase</option>
                        <option name="question">Product Questions/Inquiries</option>
                        <option name="other">Other...</option>
                      </select>
                    </div>
                    <div class="form-group addMargin">
                      <label for="inputAddress2">Questions/Comments</label></label>
                      <textarea class="form-control" name="contactMessage"></textarea>
                    </div>
                    <div>
                      <button type="submit" class="btn btn-primary">Send</button>
                      <p class="text-center"><em>* required</em></p>
                    </div>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  </form>
                </div>
            </div>
        </div>
    </div>
<!--</div>-->


<% include ./partials/footer %>