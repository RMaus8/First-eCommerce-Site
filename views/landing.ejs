            <hr>
        </div>
    </div>
    <% if(currentUser && currentUser.isAdmin){ %>
    <a href="/clearance" type="button" class="btn btn-warning">Edit Clearance Items</a>
    <% } %>
    <h1 class="clearancePrice">Clearance Items:</h1>
    <% if(clearanceProducts.length > 0) {%>
    <div class="row">
        
        <% clearanceProducts.forEach(function(cProd){ %>
            <div class="col-md-3 col-xs-6">
                <div class="thumbnail clearanceBox">
                    <a href="/products/<%=cProd.productType%>/<%=cProd._id %>"><img src="<%= cProd.image[0] %>"></a>
                    <div class="col-xs-6 col-xs-offset-3">
                        <h4><s>$<%= cProd.price %></s></h4>
                        <h3 class="clearancePrice">$<%= cProd.clearancePrice %></h3>
                    </div>
                </div>
            </div>
        <% }) %>
        
