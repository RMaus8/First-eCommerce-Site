<% include ./partials/header %>

<div class="container">
    <div class="row">
        <h1>Create New Event</h1>
        <div class="padded">
            <form id="form" action="/new_event" method="POST">
                <div class="form-group">
                    <label>Event Date</label>
                    <input class="form-control" type="date" name="date" placeholder="event date">
                </div>
                <div class="form-group">
                    <label>Event Time</label>
                    <input class="form-control" type="String" name="time" placeholder="time - i.e. 7:00 pm">
                </div>
                <div class="form-group">
                    <label>Event Name</label>
                    <input id="editDescription" class="form-control" type="text" name="name" placeholder="event name">
                </div>
                <div class="form-group">
                    <label>Location</label>
                    <input class="form-control" type="text" name="location" placeholder="location">
                </div>

                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="addMargin">Add Event</button>
            </form>
        </div>
    </div>
</div>

<% include ./partials/footer %>