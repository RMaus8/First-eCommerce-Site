<% include ./partials/header %>
<form id="form" action="/clearance?_method=PUT" method="POST">
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% products.forEach(function(product){ %>
                <div class="col-lg-3 col-md-6 col-xs-12">
                    <div class="thumbnail crop">
                        <img src="<%= product.image[0] %>">
                        <div class="caption">
                            <input type="hidden" name="productID" value="<%= product._id %>">
                            <h2><%= product.name %></h2>
                            <h3 class="col-xs-12">$<%= product.price %></h3>
                        </div>
                        <div id="marginBottom" class="col-xs-12">
                            <div class="col-md-6 col-md-offset-3">
                                
                                <div class="input-group">
                                  
                                    <% if(product.clearance === true) { %>
                                    <span class="input-group-addon">
                                    <input name="checkbox" value="<%= product._id %>" type="checkbox" aria-label="..." checked>
                                    </span>
                                    <input name="clearancePrice" type="text" class="form-control" aria-label="..." value="<%= product.clearancePrice %>">
                                    <% } else { %>
                                    <span class="input-group-addon">
                                    <input name="checkbox" value="<%= product._id %>" type="checkbox" aria-label="...">
                                    </span>
                                    <input name="clearancePrice" type="text" class="form-control" aria-label="...">
                                    <% } %>
                                  
                                  
                                </div><!-- /input-group -->
                              </div><!-- /.col-lg-6 -->
                        </div>
                    </div> 
                </div>
                
        <% }) %>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <button class="col-xs-4 col-xs-offset-4">submit</button>
</form>

<% include ./partials/footer %>